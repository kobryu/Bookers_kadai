<head>
    <title>Booker</title>
</head>


<h1>投稿一覧</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>
<% @books.each do |book| %>
  <tbody>
    <tr>
      <td><%= book.title  %></td>
      <td><%= book.body  %></td>
      <td>
         <span>
          <%= link_to 'Show' , book_path(book.id) %>
        </span>

      </td>

      <td>
        <span>
          <%= link_to 'Edit' , edit_book_path(book.id) %>
        </span>
      </td>

      <td>
        <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
      </td>
    </tr>
  </tbody>

<% end %>

</table>



<h1>New Book</h1>
<div id="error_explanation">
  <% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li class=><%= message %></li>
    <% end %>
  </ul>
<% end %>
</div>


<!-- form_with部分 -->
<%= form_with model: @book do |f| %>



  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>
  <h4></h4>
  <%= f.submit 'Create Book' %>
<% end %>

