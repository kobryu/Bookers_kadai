<head>
    <title>WebCampBackendNew</title>
</head>

<h1>投稿一覧</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Boddy</th>
    </tr>
  </thead>
<% @books.each do |book| %>
  <tbody>
    <tr>
      <td><%= book.title  %></td>
      <td><%= book.body  %></td>
      <td>
         <span>
          <%= link_to 'show' , book_path(book.id) %>
        </span>

      </td>

      <td>
        <span>
          <%= link_to 'edit' , edit_book_path(book.id) %>
        </span>
      </td>

      <td>
        <%= link_to "削除", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
      </td>
    </tr>
  </tbody>

<% end %>

</table>



<h1>New Book</h1>
<!-- form_with部分 -->
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit '投稿' %>
<% end %>